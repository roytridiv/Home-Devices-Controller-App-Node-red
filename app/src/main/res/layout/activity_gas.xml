<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GasActivity">

    <RelativeLayout
        android:background="@color/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review Kitchen data"

            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed"
            />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">
    <TextView
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lpg"
        android:textAlignment="center"
        android:text="LPG : 0 ppm"
        android:textSize="40sp"/>
    <TextView
        android:layout_marginBottom="50dp"
        android:textSize="40sp"
        android:layout_below="@+id/lpg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/smoke"
        android:text="Smoke : 0 ppm"
        android:textAlignment="center"/>
    <TextView
        android:layout_marginBottom="50dp"
        android:textSize="40sp"
        android:layout_below="@+id/smoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/distance"
        android:text="Distance : 0 cm"
        android:textAlignment="center"/>
    <TextView
        android:layout_marginBottom="50dp"
        android:textSize="40sp"
        android:layout_below="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kitchen"
        android:text="Gas stove status"
        android:textAlignment="center"/>

</RelativeLayout>




</RelativeLayout>